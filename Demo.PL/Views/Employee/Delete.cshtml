@model EmployeeViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Employee</h1>
<br />

<div>
    <dl class="row">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Address:</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Salary:</dt>
        <dd class="col-sm-10">@Model.Salary</dd>

        <dt class="col-sm-2">Hire Date:</dt>
        <dd class="col-sm-10">@Model.HireDate.ToString("dd-MM-yyyy")</dd>

        @* <dt class="col-sm-2">Department:</dt>
        <dd class="col-sm-10">@Model.Department.Name</dd> *@
    </dl>
</div>

<br />

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <input asp-for="Address" class="form-control" readonly />
    </div>

   

    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
