@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="main-agileinfo">
    <div class="agileits-top">
        @* <div asp-validation-summary="All" class="text-danger"></div> *@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form asp-action="SignUp" method="post">
            <input class="text email" type="email" asp-for="Email" placeholder="Email" required>
            <span asp-validation-for="Email" class="text-danger"></span>

            <input class="text" type="password" asp-for="Password" placeholder="Password" required>
            <span asp-validation-for="Password" class="text-danger"></span>

            <input class="text w3lpass" type="password" asp-for="ConfirmPassward" placeholder="Confirm Password" required>
            <span asp-validation-for="ConfirmPassward" class="text-danger"></span>

            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="IsAgree" class="checkbox" required>
                    <span>I Agree To The Terms & Conditions</span>
                </label>
            </div>

            <div class="clear"></div>

            <input type="submit" value="SIGNUP">
        </form>
        <p>Have an Account? <a asp-action="Login">Login Now!</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


