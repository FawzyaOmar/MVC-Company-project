@model IEnumerable<UsersViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (Model.Count() > 0)
{
    <table>
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(u => u.Id)</td>
                <td>@Html.DisplayNameFor(u => u.Name)</td>
                <td>@Html.DisplayNameFor(u => u.Email)</td>
                <td>@Html.DisplayNameFor(u => u.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(u => u.Roles)</td>
            </tr>
            <tr>Details</tr>
            <tr>Update</tr>
            <tr>Delete</tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.Name</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join(",", User.Roles)</td>
                    <td>
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@User.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@User.Id">Update</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@User.Id">Delete</a>
                    </td>
                </tr>

            }
        </tbody>

    </table>
}
else
{
    <div>
        <h1>There is no Users</h1>
    </div>

}